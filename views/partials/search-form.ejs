<form class="search-form form-inline mt-3" action="/factchecks/" method="get" id="searchFactChecksForm">
  <small></small>
  <div class="row no-gutters">
    <div class="col-10">
      <input
          class="form-control"
          id="keyword"
          type="text"
          name="keyword"
          value="<%= keyword %>"
          id="recherche"
          placeholder="Votre recherche"
        />
    </div>
    <div class="col-2">
      <button class="btn btn-dark" id="search-btn" type="submit">
        Recherche
      </button>
    </div>
  </div>
</form>