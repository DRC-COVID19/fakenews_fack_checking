<%- include('partials/head') %> <%- include('partials/header') %>
<div class="container">
<div class="content mt-5">
    <div class="row justify-content-center">
        <div class="col-sm-8 text-center">
            <h1>Liste de toutes les informations</h1>
            <a href="/add_information/add" class="btn btn-primary">Add information</a>
            <hr>
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th scope="col">Titre</th>
                  <th scope="col">Contenu</th>
                  <th scope="col">Photo</th>
                  <th scope="col">Status</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                <% for(let info of news){ %>
                  <tr>
                    <td><%= info.title %> </td>
                    <td><%= info.content %> </td>
                    <td><img src="<%= info.photo %>" alt="<%= info.title %>"></td>
                    <td><%= info.status %></td>
                    <td>
                        <a href="/edit/<%= info._id %>" class="btn btn-primary">Modifier</a>
                        <a href="/delete/<%= info._id %> " class="btn btn-danger">supprimer</a>
                    </td>
                  </tr>
                <% } %>  
                
              </tbody>
            </table>
        </div>
    </div>        
</div>
</div>
<%- include('partials/footer') %>           