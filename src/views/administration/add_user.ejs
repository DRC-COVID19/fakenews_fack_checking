<%- include('../layout/head') %>
<%- include('../layout/header') %>
<div class="container">
  <div class="content mt-5">
    <div class="row justify-content-center">
        <div class="col-sm-8 text-center">
            <h1><%= page %> </h1>
            <a href="/details/user" class="btn btn-primary">List users</a>
            <hr>
            <form action="/add/user" class="" method="post">
                <div class="form-group col-lg-12 col-md-6 col-sm-12 ">
                    <input type="text" class="form-control" id="userName" name="userName" placeholder="Nom de l'administrateur"> 
                  </div>
                  <div class="form-group col-lg-12 col-md-6 col-sm-12">
                    <input type="text" class="form-control" id="userPrenom" name="userPrenom" placeholder="Postnom de l'administrateur">
                  </div>
                  <div class="form-group col-lg-12 col-md-6 col-sm-12">
                    <input type="text" class="form-control" id="userPseudo" name="userPseudo" placeholder="Pseudo de l'administrateur">
                  </div>
                  <div class="form-group col-lg-12 col-md-6 col-sm-12">
                    <input type="email" class="form-control" id="userEmail" name="userEmail" placeholder="Adresse e-mail de l'administrateur">
                  </div>
                  <div class="form-group col-lg-12 col-md-6 col-sm-12">
                    <input type="password" class="form-control" id="userPassword" name="userPassword" placeholder="Mot de passe de l'administrateur">
                  </div>
                  <button type="submit" class="btn btn-dark">Enregistrer</button>
            </form>
        </div>
    </div>
</div>
</div>
<%- include('../layout/footer') %>