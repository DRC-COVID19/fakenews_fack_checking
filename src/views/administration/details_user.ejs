<%- include('partials/head') %> <%- include('partials/header') %>
<div class="content mt-5">
    <div class="row justify-content-center">
        <div class="col-sm-8 text-center">
            <h1>Liste de tous les admininistrateurs</h1>
            <a href="/add/user" class="btn btn-primary">Add user</a>
            <hr>
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th scope="col">Nom</th>
                  <th scope="col">Prenom</th>
                  <th scope="col">Pseudo</th>
                  <th scope="col">Email</th>
                  <th scope="col">Mot de passe</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                <% for (let user of users) { %> 
                  <tr>
                    <td><%= user.nom %></td>
                    <td><%= user.prenom %></td>
                    <td><%= user.pseudo %></td>
                    <td><%= user.email%></td>
                    <td><%= user.password %></td>
                    <td>
                        <a href="/edit/user/<%= user._id %>" class="btn btn-primary">Modifier</a>
                        <a href="/details/user/<%= user._id %>" class="btn btn-danger">supprimer</a>
                    </td>
                  </tr>
                <% } %> 
              </tbody>
            </table>
        </div>
    </div>        
</div>
<%- include('partials/footer') %>